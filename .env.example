# ============================================
# x402 Fullstack Boilerplate — Environment
# ============================================
# Copy to .env and fill in your values:
#   cp .env.example .env

# ── Network ──
# "testnet" or "mainnet" (default: testnet)
NETWORK=testnet

# ── Database (PostgreSQL 16) ──
DB_HOST=db
DB_PORT=5432
DB_NAME=x402
DB_USER=x402
DB_PASS=x402_secret

# ── Blockchain ──
# Relayer wallet private key (pays gas for settlement)
RELAYER_PRIVATE_KEY=0x_your_relayer_private_key

# Treasury address — receives payments from buyers
TREASURY_ADDRESS=0x_your_treasury_address

# X402PaymentReceiver contract address (deployed)
PAYMENT_CONTRACT_TESTNET=0x_deployed_testnet_address
PAYMENT_CONTRACT_MAINNET=0x_deployed_mainnet_address

# ── x402 Facilitator ──
FACILITATOR_KEY=your_random_shared_secret
FACILITATOR_PORT=3849

# ── AI API ──
CLAUDE_API_KEY=sk-ant-your_anthropic_api_key
CLAUDE_MODEL=claude-3-5-haiku-20241022

# ── Seller API ──
SELLER_PORT=3850
API_PRICE_CFX=1000000000000000
API_PRICE_TOKEN=100

# ── Frontend ──
NEXT_PUBLIC_SELLER_URL=http://localhost:3850
NEXT_PUBLIC_DEFAULT_NETWORK=testnet

# ── Agent ──
AGENT_PRIVATE_KEY=0x_your_agent_wallet_key
AGENT_SPEND_CAP=1.0
AGENT_API_URL=http://localhost:3850
