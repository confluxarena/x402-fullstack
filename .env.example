# ============================================
# x402 Fullstack — Environment Configuration
# ============================================
# Copy to .env and fill in your values:
#   cp .env.example .env

# ── Network ──
# "testnet" (chain 71) or "mainnet" (chain 1030)
NETWORK=testnet

# ── Database (PostgreSQL 16) ──
# Docker: DB_HOST=db | Local: DB_HOST=localhost
DB_HOST=localhost
DB_PORT=5432
DB_NAME=x402
DB_USER=x402
DB_PASS=x402_secret

# ── Blockchain ──
# Relayer wallet private key (pays gas for facilitator settlement)
RELAYER_PRIVATE_KEY=0x_your_relayer_private_key

# Treasury address — receives payments from buyers
TREASURY_ADDRESS=0x_your_treasury_address

# X402PaymentReceiver contract addresses (already deployed)
PAYMENT_CONTRACT_TESTNET=0xdd27b28203E12f90b8450d2C538e0Bb381A4a022
PAYMENT_CONTRACT_MAINNET=0x2496C17Ee9BDEcc32e14b125122f92792e18b680

# ── x402 Facilitator ──
# Shared secret between seller and facilitator (any random string)
FACILITATOR_KEY=your_random_shared_secret
# Docker: FACILITATOR_HOST=facilitator | Local: FACILITATOR_HOST=127.0.0.1
FACILITATOR_HOST=127.0.0.1
# Bind address: 0.0.0.0 for Docker (default), 127.0.0.1 for production
FACILITATOR_BIND=0.0.0.0
FACILITATOR_PORT=3851

# ── AI API (optional) ──
# Without this key, AI endpoint returns a demo/fallback response
CLAUDE_API_KEY=sk-ant-your_anthropic_api_key
CLAUDE_MODEL=claude-3-5-haiku-20241022

# ── Seller API ──
SELLER_PORT=3852

# ── Frontend (Next.js) ──
# For Docker: http://localhost:3852
# For production: https://yourdomain.com/x402-api
NEXT_PUBLIC_SELLER_URL=http://localhost:3852
NEXT_PUBLIC_DEFAULT_NETWORK=testnet
# Base path for reverse proxy (empty for Docker/standalone, /x402-app for Apache)
NEXT_PUBLIC_BASE_PATH=

# ── Agent (CLI demo) ──
# Private key for the autonomous agent wallet
AGENT_PRIVATE_KEY=0x_your_agent_wallet_key
# Maximum spend per session (in token units)
AGENT_SPEND_CAP=1.0
# Seller API URL for agent
AGENT_API_URL=http://localhost:3852
